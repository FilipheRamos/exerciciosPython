
def separarDigitos(numero):
    if numero < 0 or numero > 999:
        print("Número digitado está fora do intervalo.")
    else:
        centenas = numero // 100
        dezenas = (numero % 100) // 10
        unidade = (numero % 100) % 10

        print("Centenas: ", centenas)
        print("Dezenas: ", dezenas)
        print("Unidade: ", unidade)

num = int(input("Digite um número entre 0 e 999: "))
separarDigitos(num)
